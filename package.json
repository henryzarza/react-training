{
  "name": "react-training",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@amcharts/amcharts4": "^4.9.28",
    "@amcharts/amcharts4-geodata": "^4.1.16",
    "@apollo/client": "^3.0.1",
    "@reach/router": "^1.3.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "clsx": "^1.1.1",
    "graphql": "^15.3.0",
    "i18next": "^19.4.5",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.7.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "coverage-diff": "react-app-rewired test --coverage --watchAll=true",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-jest-amcharts": "^0.0.2",
    "msw": "^0.25.0",
    "mutationobserver-shim": "^0.3.7",
    "react-app-rewired": "^2.1.6"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest-amcharts"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!(@amcharts)\\/).+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@config(.*)$": "<rootDir>/src/config$1",
      "^@constants(.*)$": "<rootDir>/src/constants$1",
      "^@services(.*)$": "<rootDir>/src/services$1",
      "^@assets(.*)$": "<rootDir>/src/assets$1",
      "^@mocks(.*)$": "<rootDir>/src/mocks$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
